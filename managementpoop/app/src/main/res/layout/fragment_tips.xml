

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:background="@drawable/title_bg2">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:background="@drawable/top_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:id="@+id/settingbtn"
            android:background="@drawable/ico_setting"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <com.pjcstudio.managementpoop.Views.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <com.daimajia.slider.library.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/tip_tipbanner"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="sticky"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:background="#EEEEEE"
            android:textColor="#00BFFF"
            android:text="응가노하우"
            android:textSize="12dp"
            android:id="@+id/tips_tips" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#626262"
            android:textColor="#D8D8D8"
            android:textSize="12dp"
            android:text="응가와병"
            android:id="@+id/tips_dis" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#626262"
            android:textColor="#D8D8D8"
            android:textSize="12dp"
            android:text="좋은음식"
            android:id="@+id/tips_food" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#626262"
            android:textSize="12dp"
            android:textColor="#D8D8D8"
            android:text="이벤트"
            android:id="@+id/tips_event" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <com.pjcstudio.managementpoop.Views.ScrollableGridView
            android:id="@+id/gridtip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:scrollbarStyle="outsideOverlay"
            android:verticalScrollbarPosition="right"
            android:scrollbars="vertical">
        </com.pjcstudio.managementpoop.Views.ScrollableGridView>

    </LinearLayout>

        </LinearLayout>

    </com.pjcstudio.managementpoop.Views.StickyScrollView>

</LinearLayout>
