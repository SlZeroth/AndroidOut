<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="20dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bluedot"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/dayinfo_dot" />

    </RelativeLayout>

    <com.pjcstudio.managementpoop.Views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="7:00 am"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="#ff070707"
        android:id="@+id/dayinfo_time"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginRight="3dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ico_dung2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/dayinfo_image" />

        </RelativeLayout>

        
        <com.pjcstudio.managementpoop.Views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="황금바나나"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="#ff070707"
            android:id="@+id/dayinfo_memo" />
        
    </LinearLayout>

</LinearLayout>